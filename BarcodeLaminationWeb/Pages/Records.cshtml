@page
@using BarcodeLaminationModel.Models
@model BarcodeLaminationWeb.Pages.RecordsModel
@{
    ViewData["Title"] = "记录查询";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h4"><i class="fas fa-history"></i> 记录查询</h1>
</div>

<!-- 查询条件 -->
<div class="row mb-3">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-2">
                        <label class="form-label">开始日期</label>
                        <input type="date" class="form-control" name="startDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">结束日期</label>
                        <input type="date" class="form-control" name="endDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">成品ERP号</label>
                        <input type="text" class="form-control" name="productERPCode" value="@Model.ProductERPCode" placeholder="ERP号">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">记录类型</label>
                        <select class="form-select" name="recordType" onchange="this.form.submit()">
                            <option value="filmcoating" selected="@(Model.RecordType == "filmcoating")">覆膜记录</option>
                            <option value="feeding" selected="@(Model.RecordType == "feeding")">上料记录</option>
                            <option value="unloading" selected="@(Model.RecordType == "unloading")">下料记录</option>
                        </select>
                    </div>
                    @if (Model.RecordType == "filmcoating" || Model.RecordType == "unloading")
                    {
                        <div class="col-md-2">
                            <label class="form-label">批次号</label>
                            <input type="text" class="form-control" name="batchNumber" value="@Model.BatchNumber" placeholder="批次号">
                        </div>
                    }
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn btn-primary w-100">查询</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- 分页信息 -->
@{
    // 修正条件判断：分别处理每种记录类型
    bool hasRecords = false;
    PagedResponse<object> currentResponse = null;

    if (Model.RecordType == "filmcoating" && Model.FilmCoatingRecords.Data.Any())
    {
        hasRecords = true;
        currentResponse = new PagedResponse<object>
                {
                    TotalCount = Model.FilmCoatingRecords.TotalCount,
                    PageNumber = Model.FilmCoatingRecords.PageNumber,
                    PageSize = Model.FilmCoatingRecords.PageSize
                };
    }
    else if (Model.RecordType == "feeding" && Model.FeedingRecords.Data.Any())
    {
        hasRecords = true;
        currentResponse = new PagedResponse<object>
                {
                    TotalCount = Model.FeedingRecords.TotalCount,
                    PageNumber = Model.FeedingRecords.PageNumber,
                    PageSize = Model.FeedingRecords.PageSize
                };
    }
    else if (Model.RecordType == "unloading" && Model.UnloadingRecords.Data.Any())
    {
        hasRecords = true;
        currentResponse = new PagedResponse<object>
                {
                    TotalCount = Model.UnloadingRecords.TotalCount,
                    PageNumber = Model.UnloadingRecords.PageNumber,
                    PageSize = Model.UnloadingRecords.PageSize
                };
    }
}

@if (hasRecords)
{
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="text-muted">
                        显示第 @((Model.CurrentPage - 1) * Model.PageSize + 1) 到
                        @Math.Min(Model.CurrentPage * Model.PageSize, currentResponse.TotalCount) 条，
                        共 @currentResponse.TotalCount 条记录
                    </span>
                </div>
                <div class="d-flex align-items-center">
                    <span class="me-2 text-muted">每页显示：</span>
                    <select class="form-select form-select-sm" style="width: auto;" onchange="changePageSize(this.value)">
                        <option value="10" selected="@(Model.PageSize == 10)">10</option>
                        <option value="20" selected="@(Model.PageSize == 20)">20</option>
                        <option value="50" selected="@(Model.PageSize == 50)">50</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
}

<!-- 记录显示 -->
<div class="row">
    <div class="col-12">
        @if (Model.RecordType == "filmcoating")
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">覆膜记录</h5>
                </div>
                <div class="card-body">
                    @if (Model.FilmCoatingRecords.Data.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>成品ERP号</th>
                                        <th>面料ERP号</th>
                                        <th>数量</th>
                                        <th>批次</th>
                                        <th>成品描述</th>
                                        <th>打印时间</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in Model.FilmCoatingRecords.Data)
                                    {
                                        <tr>
                                            <td><strong>@record.ProductERPCode</strong></td>
                                            <td><strong>@record.NewERPCode</strong></td>
                                            <td>@record.Quantity</td>
                                            <td>@record.BatchNumber</td>
                                            <td>@record.ProductPartDescription</td>
                                            <td>@record.PrintTime.ToString("yyyy-MM-dd HH:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- 分页控件 -->
                        @if (Model.FilmCoatingRecords.TotalPages > 1)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Page("", new {
                                            recordType = Model.RecordType,
                                            startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                            endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                            productERPCode = Model.ProductERPCode,
                                            batchNumber = Model.BatchNumber,
                                            currentPage = Model.CurrentPage - 1,
                                            pageSize = Model.PageSize
                                        })">上一页</a>
                                    </li>

                                    @for (int i = 1; i <= Model.FilmCoatingRecords.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Page("", new {
                                                recordType = Model.RecordType,
                                                startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                                endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                                productERPCode = Model.ProductERPCode,
                                                batchNumber = Model.BatchNumber,
                                                currentPage = i,
                                                pageSize = Model.PageSize
                                            })">@i</a>
                                        </li>
                                    }

                                    <li class="page-item @(Model.CurrentPage == Model.FilmCoatingRecords.TotalPages ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Page("", new {
                                            recordType = Model.RecordType,
                                            startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                            endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                            productERPCode = Model.ProductERPCode,
                                            batchNumber = Model.BatchNumber,
                                            currentPage = Model.CurrentPage + 1,
                                            pageSize = Model.PageSize
                                        })">下一页</a>
                                    </li>
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> 暂无覆膜记录
                        </div>
                    }
                </div>
            </div>
        }
        else if (Model.RecordType == "feeding")
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">上料记录</h5>
                </div>
                <div class="card-body">
                    @if (Model.FeedingRecords.Data.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>成品ERP号</th>
                                        <th>面料ERP号</th>
                                        <th>刀模号</th>
                                        <th>面料数量</th>
                                        <th>覆膜总数量</th>
                                        <th>上料时间</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in Model.FeedingRecords.Data)
                                    {
                                        <tr>
                                            <td><strong>@record.ProductERPCode</strong></td>
                                            <td><strong>@record.FilmCoatingQRCode</strong></td>
                                            <td>@record.MoldNumber</td>
                                            <td>@record.FilmCoatingCount</td>
                                            <td>@record.FilmCoatingQuantity</td>
                                            <td>@record.FeedingTime.ToString("yyyy-MM-dd HH:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- 分页控件 -->
                        @if (Model.FeedingRecords.TotalPages > 1)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Page("", new {
                                            recordType = Model.RecordType,
                                            startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                            endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                            productERPCode = Model.ProductERPCode,
                                            currentPage = Model.CurrentPage - 1,
                                            pageSize = Model.PageSize
                                        })">上一页</a>
                                    </li>

                                    @for (int i = 1; i <= Model.FeedingRecords.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Page("", new {
                                                recordType = Model.RecordType,
                                                startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                                endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                                productERPCode = Model.ProductERPCode,
                                                currentPage = i,
                                                pageSize = Model.PageSize
                                            })">@i</a>
                                        </li>
                                    }

                                    <li class="page-item @(Model.CurrentPage == Model.FeedingRecords.TotalPages ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Page("", new {
                                            recordType = Model.RecordType,
                                            startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                            endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                            productERPCode = Model.ProductERPCode,
                                            currentPage = Model.CurrentPage + 1,
                                            pageSize = Model.PageSize
                                        })">下一页</a>
                                    </li>
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> 暂无上料记录
                        </div>
                    }
                </div>
            </div>
        }
        else if (Model.RecordType == "unloading")
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">下料记录</h5>
                </div>
                <div class="card-body">
                    @if (Model.UnloadingRecords.Data.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>成品ERP号</th>
                                        <th>面料ERP号</th>
                                        <th>下料数量</th>
                                        <th>批次</th>
                                        <th>打印时间</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in Model.UnloadingRecords.Data)
                                    {
                                        <tr>
                                            <td><strong>@record.ProductERPCode</strong></td>
                                            <td><strong>@record.ProductPartDescription2</strong></td>
                                            <td>@record.Quantity</td>
                                            <td>@record.BatchNumber</td>
                                            <td>@record.PrintTime.ToString("yyyy-MM-dd HH:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- 分页控件 -->
                        @if (Model.UnloadingRecords.TotalPages > 1)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Page("", new {
                                            recordType = Model.RecordType,
                                            startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                            endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                            productERPCode = Model.ProductERPCode,
                                            batchNumber = Model.BatchNumber,
                                            currentPage = Model.CurrentPage - 1,
                                            pageSize = Model.PageSize
                                        })">上一页</a>
                                    </li>

                                    @for (int i = 1; i <= Model.UnloadingRecords.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Page("", new {
                                                recordType = Model.RecordType,
                                                startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                                endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                                productERPCode = Model.ProductERPCode,
                                                batchNumber = Model.BatchNumber,
                                                currentPage = i,
                                                pageSize = Model.PageSize
                                            })">@i</a>
                                        </li>
                                    }

                                    <li class="page-item @(Model.CurrentPage == Model.UnloadingRecords.TotalPages ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Page("", new {
                                            recordType = Model.RecordType,
                                            startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                                            endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                                            productERPCode = Model.ProductERPCode,
                                            batchNumber = Model.BatchNumber,
                                            currentPage = Model.CurrentPage + 1,
                                            pageSize = Model.PageSize
                                        })">下一页</a>
                                    </li>
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> 暂无下料记录
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function changePageSize(pageSize) {
            const urlParams = new URLSearchParams(window.location.search);
            urlParams.set('pageSize', pageSize);
            urlParams.set('currentPage', 1);
            window.location.search = urlParams.toString();
        }

        // 自动关闭警告框
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });
    </script>
}